<%= form_for(@setting, html: { class: "ls-form row" }) do |f| %>
  <fieldset>

    <div class="row">
      <div class="col-md-8">
        <label class="ls-label col-md-6">
        <span class="ls-label-text"><%= f.label :name, "Nome do site" %></span>
        <%= f.text_field :name %>
      </label>
     </div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <label class="ls-label col-md-6">
        <span class="ls-label-text"><%= f.label :title, "Título" %></span>
        <%= f.text_field :title %>
      </label>
     </div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <label class="ls-label col-md-8">
        <span class="ls-label-text"><%= f.label :domain, "Domínio" %></span>
        <%= f.text_area :domain %>
      </label>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <label class="ls-label col-md-4">
        <span class="ls-label-text"><%= f.label :url, "URL" %></span>
        <%= f.text_field :url %>
        </label>
      </div>
    </div>



    <div class="row">
      <div class="col-md-8">
            <%= f.button  "Salvar", :type => "submit" , class: "ls-btn-primary"%>
         <%= f.submit "Limpar", :type => "reset",  class: "ls-btn-primary" %>
         <%= link_to 'Voltar', books_path, class: "ls-btn-darker" %>
    </div>
    </div>

 </fieldset>

<% end %>
