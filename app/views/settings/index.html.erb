<h1 class="ls-title-intro ls-ico-cog">Configurações</h1>


<% @settings.each do |setting| %>
<div class="ls-box">
<div class="row">
  <div class="col-md-12">
    <div class="ls-box">
      <p><strong>Nome do site</strong></p>
      <p class="ls-break-text"><%= setting.name %></p>
      <hr>
      <p><strong>Título</strong></p>
      <p class="ls-break-text"><%= setting.title %></p>
      <hr>
      <p><strong>Domínio</strong></p>
      <p class="ls-break-text"><%= setting.domain %></p>
      <hr>
      <p><strong>URL</strong></p>
      <p class="ls-break-text"><%= setting.url %></p>
      <hr>
      <p><strong>Email</strong></p>
      <p class="ls-break-text"><%= setting.email %></p>
      <hr>
    </div>
  </div>
</div>
</div>

<div class="ls-pagination-filter ">
<%= link_to 'Editar', edit_setting_path(setting) , class: "ls-btn-darker" %>
 </div>
<% end %>
