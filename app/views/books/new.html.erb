<h1>Novo Livro</h1>

<%= form_for @book do |f| %>
  <p>
    <%= f.label :Autor %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :Título %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Descrição %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :Versão %><br />
    <%= f.text_field :release %>
  </p>
  <p>
    <%= f.label :Linguagem %><br />
    <%= f.text_field :language %>
  </p>
  <p>
    <%= f.label :Editora %><br />
    <%= f.text_field :publishing_house %>
  </p>

  <p>
    <%= f.submit "Criar" %>
  </p>
<% end %>
