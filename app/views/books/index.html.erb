<h1 class="ls-title-intro ls-ico-book">Livros</h1>

<% @books.each do |book| %>

<div class="ls-list">
  <header class="ls-list-header">
    <div class="ls-list-title col-md-9">
      <strong>Nome do Livro</strong>
      <small><%= link_to book.title, book %></small>
    </div>
  </header>
  <div class="ls-list-content ">
    <div class="col-xs-12 col-md-6">
        <span class="ls-list-label">Autor</span>
      <strong><%= book.author %></strong>
    </div>
    <div class="col-xs-12 col-md-6">
      <span class="ls-list-label">Status</span>
      <strong>Publicado</strong>
    </div>
  </div>
</div>
<% end %>

<div class="ls-pagination-filter ">
     <%= link_to 'Novo Livro', new_book_path(@book) , class: "ls-btn-darker" %>
</div>
