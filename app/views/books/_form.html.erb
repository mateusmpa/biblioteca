<%= form_for(@book, html: { class: "ls-form row" }) do |f| %>

  <fieldset>

    <div class="row">
      <div class="col-md-8">
        <label class="ls-label col-md-6">
        <span class="ls-label-text"><%= f.label :title, "Título" %></span>
        <%= f.text_field :title %>
      </label>
     </div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <label class="ls-label col-md-6">
        <span class="ls-label-text"><%= f.label :author, "Autor" %></span>
        <%= f.text_field :author %>
      </label>
     </div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <label class="ls-label col-md-8">
        <span class="ls-label-text"><%= f.label :description, "Descrição" %></span>
        <%= f.text_area :description %>

      </label>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <label class="ls-label col-md-4">
        <span class="ls-label-text"><%= f.label :release, "Versão" %></span>
               <%= f.text_field :release, :placeholder => 'dd/mm/yyyy' %>
        </label>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <label class="ls-label col-md-4">
        <span class="ls-label-text"><%= f.label :language, "Linguagem" %></span>
        <%= f.text_field :language %>
      </label>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <label class="ls-label col-md-5">
        <span class="ls-label-text"><%= f.label :publishing_house, "Editora" %></span>
        <%= f.text_field :publishing_house %>
      </label>

         <%= f.button  "Salvar", :type => "submit" , class: "ls-btn-primary"%>
         <%= f.submit "Limpar", :type => "reset",  class: "ls-btn-primary" %>
         <%= link_to 'Voltar', books_path, class: "ls-btn-darker" %>
    </div>
    </div>

 </fieldset>

<% end %>


